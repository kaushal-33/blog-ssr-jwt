<!-- start -->
<%- include("partials/start.ejs") %>

<!-- nav -->
<%- include("partials/navBar.ejs") %>

<div class="flex overflow-hidden bg-white pt-16">
  <!-- side bar -->
  <%- include("partials/aside.ejs") %>

  <div id="main-content" class="h-full w-full relative overflow-y-auto lg:ml-64">
    <main>

      <% if (myBlogs.length === 0) { %>
      <!-- EMPTY STATE -->
      <div class="flex flex-col items-center justify-center py-20 px-4">

        <div class="w-36 h-36 mb-8 bg-gradient-to-br from-indigo-100 to-indigo-200 rounded-3xl flex items-center justify-center shadow-xl">
          <svg class="w-24 h-24 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
        </div>

        <h2 class="text-3xl font-bold text-gray-900 mb-3 text-center">
          You haven‚Äôt written any blogs yet
        </h2>

        <p class="text-gray-600 text-lg mb-8 text-center max-w-md">
          Start sharing your thoughts with the world by creating your first blog post.
        </p>

        <a href="/add-blog" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-[#00b3b3] to-[#009999]
                   text-white font-semibold text-lg rounded-2xl shadow-xl hover:scale-105 transition">
          ‚úçÔ∏è Write Your First Blog
        </a>
      </div>

      <% } else { %>

      <!-- HEADER -->
      <div class="p-6 sm:p-8 lg:p-10">
        <div class="mb-10 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">

          <!-- Title & subtitle -->
          <div>
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-1">
              My Blogs
            </h1>
            <p class="text-gray-600 text-base sm:text-lg">
              All posts written by you
            </p>
          </div>

          <!-- Action button -->
          <a href="/add-blog" class="inline-flex items-center gap-2 px-6 py-3 bg-[#3798a6] text-white text-sm sm:text-base font-semibold rounded-xl shadow-md hover:shadow-lg hover:opacity-90 transition">

            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>

            New Blog
          </a>

        </div>


        <!-- BLOG GRID -->
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">

          <% myBlogs.forEach(data => { %>
          <div class="group h-full">
            <div class="relative h-full flex flex-col bg-white rounded-3xl shadow-xl overflow-hidden
                         hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">

              <!-- IMAGE -->
              <div class="relative h-56 overflow-hidden">
                <img src="/<%= data.blogImage %>" alt="<%= data.blogTitle %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />

                <!-- QUICK VIEW -->
                <div class="absolute inset-0 bg-black/50 flex items-center justify-center
                             opacity-0 group-hover:opacity-100 transition">
                  <a href="/quick-view/<%= data.id %>" class="px-6 py-3 bg-[#3798a6] text-white font-semibold rounded-xl shadow-lg
                 hover:bg-cyan-600 hover:text-black transition">
                    üëÅ Quick View
                  </a>
                </div>
              </div>

              <!-- CONTENT -->
              <div class="p-8 flex flex-col flex-grow">

                <h3 class="text-xl font-bold text-gray-900 capitalize line-clamp-2 mb-3">
                  <%= data.blogTitle %>
                </h3>

                <% let tags = data.blogTags.split(","); %>
                <div class="flex flex-wrap gap-2 mb-4">
                  <% tags.forEach(tag => { %>
                  <span class="px-3 py-1 uppercase text-[10px] font-semibold rounded-full border border-[#00b3b3]">
                    <%= tag.trim() %>
                  </span>
                  <% }) %>
                </div>

                <div class="text-gray-600 text-sm mb-6 overflow-hidden max-h-[4.9rem]">
                  <%- data.blogDescription %>
                </div>

                <!-- ACTIONS -->
                <div class="mt-auto pt-6 border-t border-gray-100 flex justify-between items-center">
                  <div class="flex gap-2">
                    <a href="/edit-form/<%= data.id %>" class="px-4 py-2 text-sm font-semibold text-indigo-600 bg-indigo-50 rounded-xl">
                      Edit
                    </a>

                    <a href="/delete-blog/<%= data.id %>" class="px-4 py-2 text-sm font-semibold text-red-600 bg-red-50 rounded-xl">
                      Delete
                    </a>
                  </div>

                  <span class="text-[10px] uppercase font-semibold text-gray-500">
                    by You
                  </span>
                </div>

              </div>
            </div>
          </div>
          <% }) %>

        </div>
      </div>

      <% } %>

    </main>
  </div>
</div>

<script async defer src="/assets/js/buttons.js"></script>
<script src="/assets/js/app.bundle.js"></script>

<!-- end -->
<%- include("partials/end.ejs") %>
<!-- start -->
<%-include("partials/start.ejs")%>
<!-- nav -->
<%-include("partials/navBar.ejs")%>
<div class="flex overflow-hidden bg-white pt-16">
  <!-- side bar -->
  <%-include("partials/aside.ejs")%>

  <div id="main-content" class="h-full w-full relative overflow-y-auto lg:ml-64">
    <main class="p-6">

      <!-- Page Header -->
      <div class="mb-8">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">
          My Profile
        </h1>
        <p class="text-sm sm:text-base text-gray-600">
          Manage your account & blogs
        </p>
      </div>

      <!-- Profile Card -->
      <div class="max-w-3xl bg-white rounded-3xl shadow-lg p-8">

        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">

          <!-- User Info -->
          <div class="flex items-center gap-5">

            <!-- Avatar -->
            <div class="w-16 h-16 rounded-full bg-[#3798a6] text-white flex items-center justify-center text-xl font-bold shadow-md">
              <%= user.userName.charAt(0).toUpperCase() %>
            </div>

            <!-- Name & Email -->
            <div>
              <h2 class="text-lg sm:text-xl capitalize font-semibold text-gray-900">
                <%= user.userName %>
              </h2>
              <p class="text-sm text-gray-500">
                <%= user.userEmail %>
              </p>
            </div>

          </div>

          <!-- Actions -->
          <div class="flex flex-wrap gap-3">

            <a href="/my-blogs" class="inline-flex items-center gap-2 px-6 py-3 bg-[#3798a6] text-white text-sm font-semibold rounded-xl shadow-md hover:shadow-lg hover:opacity-90 transition">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0l-4-4m4 4l-4 4" />
              </svg>
              My Blogs
            </a>

            <a href="/add-blog" class="inline-flex items-center gap-2 px-6 py-3 bg-gray-100 text-gray-800 text-sm font-semibold rounded-xl hover:bg-gray-200 transition">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              New Blog
            </a>

          </div>

        </div>

        <!-- Divider -->
        <div class="my-8 border-t border-gray-100"></div>

        <!-- Optional stats -->
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-6 text-center">
          <div>
            <p class="text-2xl font-bold text-[#3798a6]">
              <%= user.blogCount || 0 %>
            </p>
            <p class="text-sm text-gray-500">
              Total Blogs
            </p>
          </div>

          <div>
            <p class="text-2xl font-bold text-gray-800">
              Active
            </p>
            <p class="text-sm text-gray-500">
              Status
            </p>
          </div>
        </div>

      </div>

    </main>

  </div>
</div>

<script async defer src="/assets/js/buttons.js"></script>
<script src="/assets/js/app.bundle.js"></script>
<!-- end -->
<%-include("partials/end.ejs")%>
<%- include("partials/start.ejs") %>
    <%- include("partials/navBar.ejs") %>

        <div class="flex overflow-hidden bg-white pt-16">
            <!-- side bar -->
            <%- include("partials/aside.ejs") %>

                <div id="main-content" class="h-full w-full relative overflow-y-auto lg:ml-64">
                    <main>
                        <div class="p-6 sm:p-8 lg:p-10 max-w-5xl mx-auto">
                            <!-- back button -->
                            <div class="mb-6 flex items-center justify-between">
                                <a href="/"
                                    class="inline-flex items-center text-sm font-semibold text-gray-600 hover:text-[#00b3b3] transition">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M15 19l-7-7 7-7"></path>
                                    </svg>
                                    Back to posts
                                </a>

                                <div class="flex gap-2">
                                    <a href="/edit-form/<%= blog?.id %>"
                                        class="flex items-center px-4 py-2 text-xs sm:text-sm font-semibold text-indigo-600 hover:text-indigo-700 bg-indigo-50 hover:bg-indigo-100 rounded-xl transition">
                                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                        Edit
                                    </a>
                                    <a href="/delete-blog/<%= blog?.id %>"
                                        class="flex items-center px-4 py-2 text-xs sm:text-sm font-semibold text-red-600 hover:text-red-700 bg-red-50 hover:bg-red-100 rounded-xl transition">
                                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                        Delete
                                    </a>
                                </div>
                            </div>

                            <!-- header + meta -->
                            <article class="bg-white rounded-3xl shadow-xl overflow-hidden">
                                <div class="relative h-72 sm:h-80 md:h-96 bg-gradient-to-br from-gray-100 to-gray-200">
                                    <img src="/<%= blog?.blogImage %>" alt="<%= blog?.blogTitle %>"
                                        class="w-full h-full object-cover" />
                                    <div
                                        class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/10 to-transparent">
                                    </div>

                                    <div class="absolute bottom-0 left-0 right-0 p-6 sm:p-8">
                                        <div class="flex flex-wrap justify-between items-end gap-4">
                                            <div>
                                                <p class="text-xs uppercase tracking-wide text-gray-200 mb-2">
                                                    ID: <span class="font-semibold">
                                                        <%= blog?.id %>
                                                    </span>
                                                </p>
                                                <h1
                                                    class="text-2xl sm:text-3xl md:text-4xl font-bold text-white leading-tight">
                                                    <%= blog?.blogTitle %>
                                                </h1>
                                            </div>

                                            <!-- tags -->
                                            <% if (blog?.blogTags) { const tags=blog.blogTags.split(","); %>
                                                <div class="flex flex-wrap gap-2">
                                                    <% tags.forEach(tag=> { %>
                                                        <span
                                                            class="px-3 py-1 bg-white/10 text-xs font-semibold uppercase tracking-wide text-gray-100 rounded-full border border-white/40">
                                                            <%= tag.trim() %>
                                                        </span>
                                                        <% }) %>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>

                                <!-- content -->
                                <div class="p-6 sm:p-8 lg:p-10">
                                    <div class="prose max-w-none prose-sm sm:prose-base">
                                        <!-- if blogContent is HTML/markdown you render it here.
                   for now using description as body -->
                                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                                            <%= blog.blogDescription %>
                                        </p>
                                    </div>
                                </div>
                            </article>
                        </div>
                    </main>
                </div>
        </div>

        <script async defer src="/assets/js/buttons.js"></script>
        <script src="/assets/js/app.bundle.js"></script>
        <%- include("partials/end.ejs") %>